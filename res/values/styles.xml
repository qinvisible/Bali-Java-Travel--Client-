<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="HeaderText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#DEDEDE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">5dip</item>
            
        
        
    </style>
    <style name="home_menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#33B5E5</item>  
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:background">@drawable/menu</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">#87888A</item>
        <item name="android:shadowRadius">3</item>
    </style>
    
	<style name="label_result">
	    <item name="android:textSize">20sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingLeft">15dip</item>
	    <item name="android:paddingTop">3dip</item>
	    <item name="android:paddingBottom">3dip</item>
		<item name="android:background">#98AFC7</item>
		<item name="android:textColor">#000000</item>
	</style>
	
	<style name="detil_result">
	    <item name="android:textSize">15sp</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:paddingLeft">10dip</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>


    <style name="ButtonBarButton" />

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

</resources>