<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <TextView 
			style="@style/HeaderText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dip"
		    android:paddingLeft="10dip"
		    android:paddingTop="3dip"
		    android:textSize="25sp"
		    android:gravity="left"
		    android:id="@+id/detailHead"
			android:text="@string/reg"
			/>
	     
	    <TextView 
	       	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FDD017"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:id="@+id/nama_kend"
	        android:layout_marginBottom="20dip"
	        android:layout_marginTop="20dip"
	        android:gravity="center"
	        />
	    
		<TextView 
	       	android:layout_width="200dip"
	       	android:layout_height="wrap_content"
	        style="@style/label_result"
	        android:id="@+id/kelas_kend"
	        
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        style="@style/detil_result"
	        android:id="@+id/kelas_kend1"
	        
	        />
		
		<TextView 
		    android:layout_marginTop="5dip"
	       	android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        style="@style/label_result"
	        android:id="@+id/harga_kend"
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        style="@style/detil_result"
	        android:id="@+id/harga_kend1"
	        
	        />
		
		<TextView 
		    android:layout_marginTop="5dip"
		    style="@style/label_result"
	       	android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        android:id="@+id/jam_kend"
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        style="@style/detil_result"
	        android:id="@+id/jam_kend1"
	        
	        />
		
		<TextView 
	       	android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
		    style="@style/label_result"
	        android:id="@+id/waktu_kend"
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        style="@style/detil_result"
	        android:id="@+id/waktu_kend1"
	        
	        />
		
		<TextView 
	       	android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        android:id="@+id/info_kend"
	        android:layout_marginTop="5dip"
		    style="@style/label_result"
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:textSize="15sp"
	        style="@style/detil_result"
	        android:id="@+id/info_kend1"
	        />
		
		
		
		
		<TableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*"
		    android:shrinkColumns="*"
		    android:background="#150517"
	        >
	        <TableRow
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@android:color/black"
	            >
	            <TextView 
	                android:layout_weight="1"
	                android:layout_marginLeft="5dip"
	                android:paddingLeft="5dip"
	                android:id="@+id/text_indx"
	                android:background="@drawable/bg_btn_pasif"
	                android:textColor="#ffffff"
	                android:textSize="14sp"
	                />
	                   
	            <TextView 
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="5dip"
	                android:paddingLeft="5dip"
	                android:id="@+id/text_indx2"
	                android:background="@drawable/bg_btn_pasif"
	                android:textSize="14sp"
	                android:textColor="#FDD017"/>	            
	        </TableRow>
		</TableLayout>
		
		
		
		<TextView 
		    android:background="@drawable/bg_btn"
		    android:layout_width="wrap_content"
		    android:padding="5dip"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dip"
		    android:layout_marginLeft="10dip"
		    android:id="@+id/btn_info"/>
		
		<TextView 
	       	android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        android:id="@+id/ticketing"
	        android:layout_marginTop="5dip"
		    style="@style/label_result"
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        style="@style/detil_result"
	        android:id="@+id/ticketing1"
	        />
		
		<TextView 
	       	android:layout_width="200dip"
	        android:layout_height="wrap_content"
	        android:id="@+id/promo"
	        android:layout_marginTop="5dip"
		    style="@style/label_result"
	        />
		<TextView 
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        style="@style/detil_result"
	        android:id="@+id/promo1"
	        />
		
	</LinearLayout>
</ScrollView>